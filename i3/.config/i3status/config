general {
    colors = true
    color_good = "#BBBBBB"
    color_bad = "#CC1616"
    color_degraded = "#55858E"
    interval = 2
}

order += "volume master"
order += "load"
order += "cpu_usage"
#order += "cpu_temperature 0"
#order += "cpu_temperature 1"
#order += "cpu_temperature 2"
#order += "cpu_temperature 3"
order += "disk /"
order += "disk /media/media"
#order += "ethernet eth0"
order += "tztime local"
#order += "ipv6"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless wlp0s20f3"

volume master {
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    format = "🔊 %volume "
}

load {
    format = "⚡ %1min"
}

cpu_usage {
    format = "💻 %usage%"
}


disk "/" {
    format = "💽 %avail:/ "
}

disk "/media/media" {
    format = "💽 %avail:m "
}

wireless wlp0s20f3 {
    format_up = "📶 %quality at %essid "
    format_down = "📶 No WiFi "
}

ethernet eth0 {
   format_up = "🌐 %ip "
   format_down = "🌐 No eth0 "
}

run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
    pidfile = "/var/run/vpnc/pid"
}

tztime local {
    format = "🕒 %H:%M %d-%h "
}

